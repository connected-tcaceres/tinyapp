<header>
	<nav class="navbar navbar-expand-md navbar-dark bg-success">
		<a class="navbar-brand" href="/urls">TinyApp</a>
		<button
			class="navbar-toggler"
			type="button"
			data-toggle="collapse"
			data-target="#navbarNavAltMarkup"
			aria-controls="navbarNavAltMarkup"
			aria-expanded="false"
			aria-label="Toggle navigation"
		>
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
			<div class="navbar-nav">
				<a class="nav-item nav-link" href="/urls">My URLs</a>
				<a class="nav-item nav-link" href="/urls/new">Create New URL</a>
			</div>
		</div>
	</nav>
	<% let action = username ? "logout" : "login"; %>
	<div class="container" style="margin: 0 auto">
		<form class="form-inline" action="/<%=action%>" method="POST">
			<div class="form-group mb-2">
				<label for="username">Username:</label>
				<input
					class="form-control"
					type="text"
					name="username"
					value="<%= username %>"
					style="width: 300px; margin: 1em"
				/>
				<% if(username){ %>
				<button type="submit" class="btn btn-primary">Logout</button>
				<% }else { %>
				<button type="submit" class="btn btn-primary">Submit</button>
				<% } %>
			</div>
		</form>
	</div>
</header>
